<Page x:Class="Store.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Store.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Button Click="ModifyShop" Grid.ColumnSpan="2" FontSize="32">Add to Shop</Button>
        <Button Click="GoToMenu" Grid.Row="1" Grid.ColumnSpan="2" FontSize="32">Shop</Button>
        <Button Click="ViewCart" Grid.Row="2" Grid.ColumnSpan="2" FontSize="32">View Cart</Button>
        <Button Click="Checkout" Grid.Row="3" Grid.ColumnSpan="2" FontSize="32">Checkout</Button>
        
    </Grid>
</Page>
